<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/zoom_default_foreground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alertIcon"
            android:text="@string/zoom_sdk_icon_attention_fill"
            android:textColor="@color/zoom_alert_green"
            android:fontFamily="sans-serif-bold"
            android:textSize="25sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alertTitle"
            android:text=""
            android:textColor="@color/zoom_default_tab_success_background"
            android:fontFamily="sans-serif-bold"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="50dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alertMessage"
        android:textColor="@color/zoom_default_tab_success_background"
        android:fontFamily="sans-serif-light"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/doneButton"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/zoom_alert_green"
            android:textColor="@android:color/white"/>
    </RelativeLayout>


</LinearLayout>