<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipChildren="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/zoomDialogIcon"
                android:layout_gravity="center"
                android:textSize="70sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/zoomDialogIconSubtext"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/zoomDialogIcon"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:id="@+id/zoomDialogImage"
                android:layout_gravity="center"
                android:textSize="70sp"
                android:gravity="center"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/zoomDialogHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:includeFontPadding="false"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="#ffffff"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text=""/>

        <TextView
            android:id="@+id/zoomDialogText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"
            android:lineSpacingMultiplier="1.1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text=""/>

        <TextView
            android:visibility="gone"
            android:id="@+id/zoomDialogText2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"
            android:lineSpacingMultiplier="1.1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text=""/>

        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:id="@+id/iconMessage1"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="10dp"/>

        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:id="@+id/iconMessage2"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="10dp"/>

        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:id="@+id/iconMessage3"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="10dp"/>

    </LinearLayout>

</LinearLayout>